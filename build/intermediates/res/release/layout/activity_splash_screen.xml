<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#ff000000"
    tools:context="sg.rods.hitag.SplashScreen">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="167dp"
            android:layout_weight="1"></LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:id="@+id/imageView"
            android:layout_gravity="center"
            android:src="@mipmap/ic_splashscreen"
            android:layout_weight="0.1" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="189dp"
            android:weightSum="1"
            android:id="@+id/progessBarLinear">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="44dp"></LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <ProgressBar
                    style="?android:attr/progressBarStyleLarge"
                    android:layout_width="103dp"
                    android:layout_height="103dp"
                    android:id="@+id/progressBar"
                    android:layout_gravity="center_horizontal"
                    android:indeterminate="true"
                    android:indeterminateBehavior="cycle" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</FrameLayout>
